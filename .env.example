# ===================== Application Settings =====================
APP_PORT=8000

# ===================== Elasticsearch =====================
ELASTICSEARCH_HOST=http://es:9200
ELASTICSEARCH_PORT=9200
ELASTIC_USER=elastic
ELASTIC_PASSWORD=changeme
# Elasticsearch cluster settings
xpack.security.enabled=false
discovery.type=single-node

# ===================== Redis =====================
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=redis_pass

# ===================== Celery =====================
CELERY_BROKER_URL=redis://:redis_pass@redis:6379/0
CELERY_RESULT_BACKEND=redis://:redis_pass@redis:6379/0

# Optional Celery Settings (uncomment to customize)
# CELERY_TASK_TIME_LIMIT=1800  # 30 minutes in seconds
# CELERY_TASK_SOFT_TIME_LIMIT=1500  # 25 minutes in seconds
# CELERY_RESULT_EXPIRES=3600  # 1 hour in seconds
# CELERY_WORKER_PREFETCH_MULTIPLIER=4
# CELERY_WORKER_MAX_TASKS_PER_CHILD=1000

# ===================== Celery Flower (Monitoring) =====================
FLOWER_PORT=5555
# Format: username:password
FLOWER_BASIC_AUTH=admin:flower_admin_password
# Optional: Flower URL prefix (if behind reverse proxy)
# FLOWER_URL_PREFIX=/flower

# ===================== Firebase =====================
GOOGLE_APPLICATION_CREDENTIALS=/secrets/firebase_key.json

# ===================== JWT Secret (for guest sessions) =====================
# IMPORTANT: Change this in production to a long random string
# Generate with: python -c "import secrets; print(secrets.token_urlsafe(32))"
JWT_SECRET=change-this-secret-in-production-use-long-random-string

# ===================== Cloudflare Turnstile (Bot Protection) =====================
# Leave empty to disable bot protection in development
# Get your secret key from: https://dash.cloudflare.com/
CLOUDFLARE_TURNSTILE_SECRET=

# ===================== CORS Origins =====================
# Comma-separated list of allowed origins
CORS_ORIGINS=http://localhost:3000,http://localhost:8000

# ===================== Logging =====================
# Optional: Set log level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
# LOG_LEVEL=INFO

# ===================== Email Settings (for future use) =====================
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your-email@gmail.com
# SMTP_PASSWORD=your-app-password
# SMTP_FROM=noreply@scholarships.com

# ===================== AWS Settings (for future use) =====================
# AWS_ACCESS_KEY_ID=your-access-key
# AWS_SECRET_ACCESS_KEY=your-secret-key
# AWS_REGION=us-east-1
# S3_BUCKET_NAME=scholarships-bucket

# ===================== Sentry (Error Tracking - for production) =====================
# SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
# SENTRY_ENVIRONMENT=production

# ===================== Rate Limiting (for future use) =====================
# RATE_LIMIT_PER_MINUTE=60
# RATE_LIMIT_PER_HOUR=1000
